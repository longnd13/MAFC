@model Prj.BusinessLogic.Models.AccountChangePassModel
@{
  
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<section class="content-header">
    <h1>
        CHANGE PASSWORD
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>DashBoard</a></li>
        <li class="active">Change password</li>
    </ol>
</section>
<section class="content">
    @using (Html.BeginForm())
    {
        <div class="row">
            <!-- left column -->
            <div class="col-md-7">
                <!-- general form elements -->
                <div class="box box-primary">
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        <div class="form-group">
                            <label>Password current</label>
                            @Html.TextBoxFor(model => model.PassOld, new { @class = "form-control", type = "password", maxlength = 150, placeholder = "Input Password current.", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.PassOld, null, new { @class = "star-required" })
                        </div>

                        <div class="form-group">
                            <label>Password new</label>
                            @Html.TextBoxFor(model => model.PassNew, new { @class = "form-control", type = "password", maxlength = 150, placeholder = "Input Password new.", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.PassNew, null, new { @class = "star-required" })
                        </div>

                        <div class="form-group">
                            @Html.Raw(ViewBag.message)

                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->

        </div>   <!-- /.row -->
    }
</section>
<script type="text/javascript">
    $(document).ready(function () { $("input").attr("autocomplete", "off"); });
</script>




